{
  "include": ["src", "src/types", "setup-jest.ts", "jest", "./jest.polyfills.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "paths": {
      "consts": ["src/consts"],
      "services": ["src/services"],
      "pages": ["src/pages"],
    },
    "baseUrl": ".",
    "sourceMap": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowUmdGlobalAccess": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node10",
    "target": "ES6",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
